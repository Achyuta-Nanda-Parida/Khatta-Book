<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Khaatabook</title>
    <link rel="stylesheet" href="./css/style.css">
</head>
<body>
    <header>
        <div class="header-left">
            <h1>Khaatabook</h1>
        </div>
        <div class="header-right">
            <a href="/">Home</a>
            <a href="/create">Create New Hisaab</a>
        </div>
    </header>

    <div class="container">
        <h2>All Hisaab Kitaab</h2>
        <% if(files.length>0){%>

            <% files.forEach(function(file){%>
                
                            
                <ul class="hisaab-list">
                    <li class="hisaab-item">
                        <span><%= file.split(".")[0] %></span>
                        <a href="/hisaab/<%= file %>"><img src="/fonts/images (1).png" alt="arrow"></a> 
                        <a href="/edit/<%= file %>"><img src="/fonts/images.png" alt="Edit"></a> 
                        <a href="/delete/<%= file %>"><img src="/fonts/images (1).png" alt="Delete"></a> 
                </ul>
                       
            <%})%> 

            <%}
            else{%>
                        <h1>Nothing is to show here for empty files</h1>
            <%}
            %> 
    </div>

</body>
</html>